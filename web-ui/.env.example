# NEAR network (mainnet or testnet)
NEXT_PUBLIC_NETWORK_ID=testnet

# OutLayer project ID (account/project-name)
NEXT_PUBLIC_PROJECT_ID=your-account.testnet/near-forms

# Database API URL (endpoint for form metadata and submissions)
NEXT_PUBLIC_DATABASE_API_URL=http://localhost:4001

# Form ID (must match db-api and WASI module)
NEXT_PUBLIC_FORM_ID=your-form-uuid-here

# OutLayer contract ID (default: outlayer.testnet or outlayer.near)
NEXT_PUBLIC_OUTLAYER_CONTRACT=outlayer.testnet

# OutLayer secrets configuration
NEXT_PUBLIC_SECRETS_PROFILE=default
# Required when USE_SECRETS=true (account that owns your OutLayer secrets)
NEXT_PUBLIC_SECRETS_ACCOUNT_ID=your-account.testnet
NEXT_PUBLIC_USE_SECRETS=true

# OutLayer deposit amount in NEAR (default: 0.025)
NEXT_PUBLIC_OUTLAYER_DEPOSIT_NEAR=0.025

# Master public key for client-side encryption (66-char hex compressed secp256k1 pubkey, starts with 02 or 03)
NEXT_PUBLIC_MASTER_PUBLIC_KEY=
